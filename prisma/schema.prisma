generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Statuses {
  Idea
  Pending
  Published
}

model Article {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String?
  isFeatured  Boolean  @default(false)
  status      Statuses @default(Idea)

  content String? @db.Text()

  ogImage Image? @relation(fields: [imageId], references: [id])
  imageId Int?

  categories Category[]
}

model Image {
  id  Int    @id @default(autoincrement())
  alt String
  url String

  Article Article[]

  Category Category[]
}

model Category {
  id   Int    @id @default(autoincrement())
  name String

  isFeatured Boolean @default(false)

  image   Image? @relation(fields: [imageid], references: [id])
  imageid Int?

  articles Article[]
}
